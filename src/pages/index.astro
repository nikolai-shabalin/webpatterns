---
import Layout from "../layouts/Layout.astro";
import PatternCard from "../components/PatternCard.astro";
import Hero from "../components/Hero.astro";
import SectionHeader from "../components/SectionHeader.astro";
import FeaturesGrid from "../components/FeaturesGrid.astro";
import PatternsList from "../components/PatternsList.astro";
---

<Layout>
  <Hero />

  <section class="description">
    <SectionHeader />
    <FeaturesGrid />
  </section>

  <PatternCard
    icon="📄"
    title="Центрирование страницы"
    description="Современный вариант центрирования контента на странице."
    imageSrc="/centering-page/margin-inline-final-size.png"
    imageAlt="Демонстрация центрирования контента на странице"
    href="/patterns/centering-page"
  />
  </PatternsList>
</Layout>
